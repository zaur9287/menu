# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index
GET     /v1/clients                 controllers.HomeController.get
POST    /v1/clients                 controllers.HomeController.create
DELETE  /v1/clients/deleteall       controllers.HomeController.deleteall
DELETE  /v1/clients/delete/:id      controllers.HomeController.delete(id:Int)
PUT     /v1/clients/getclient/:id   controllers.HomeController.getClient(id:Int)
PUT     /v1/clients/update/:id      controllers.HomeController.update(id: Int)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
